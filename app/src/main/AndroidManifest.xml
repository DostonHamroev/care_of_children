<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uz.hamroev.careofchildren">

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_careofchildren"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_careofchildren_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CareOfChildren">
        <activity
            android:screenOrientation="portrait"
            android:name=".activity.AuthorsActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".activity.SubjectActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".activity.HomeActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>